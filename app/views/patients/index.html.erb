<p id="notice"><%= notice %></p>

<h1><%= t("view.listing_patients") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("view.medical_record_number") %></th>
      <th><%= t("view.full_name") %></th>
      <th><%= t("view.age") %></th>
      <th><%= t("view.gender") %></th>
      <th><%= t("view.status") %></th>
      <th><%= t("view.location_name") %></th>
      <th><%= t("view.viewed_count") %></th>
      <th colspan="3"><%= t("action.options") %></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= medical_record_number patient %></td>
        <td><%= full_name patient %></td>
        <td><%= patient_age patient %></td>
        <td><%= patient.gender.text %></td>
        <td><%= patient.status.text %></td>
        <td><%= link_to patient.location.name, view_location_patient_path(patient) %></td>
        <td><%= patient.viewed_count %></td>
        <td><%= link_to t("action.show"), patient %></td>
        <td><%= link_to t("action.edit"), edit_patient_path(patient) %></td>
        <td><%= link_to t("action.destroy"), patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

